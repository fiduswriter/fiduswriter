{
  "name": "fidus-writer",
  "version": "3.1.0-dev",
  "description": "Install dependencies for ES6 transpilation",
  "scripts": {
      "copy_jquery": "mkdir -p ./static-libs/js/libs/ && cp node_modules/jquery/dist/jquery.min.js ./static-libs/js/libs/",
      "copy_jquery-ui": "mkdir -p ./static-libs/js/libs/ && cp node_modules/jquery-ui-dist/jquery-ui.min.js ./static-libs/js/libs/",
      "copy_underscore": "mkdir -p ./static-libs/js/libs/ && cp node_modules/underscore/underscore-min.js ./static-libs/js/libs/",
      "copy_datatables": "mkdir -p ./static-libs/js/libs/ && cp node_modules/datatables/media/js/jquery.dataTables.min.js ./static-libs/js/libs/",
      "copy_dropkickjs": "mkdir -p ./static-libs/js/libs/ && cp node_modules/dropkickjs/build/js/dropkick.min.js ./static-libs/js/libs/",
      "copy_citeproc": "mkdir -p ./static-libs/js/libs/ && cp node_modules/citeproc/citeproc.js ./static-libs/js/libs/",
      "postinstall": "npm run copy_jquery && npm run copy_jquery-ui && npm run copy_underscore && npm run copy_datatables && npm run copy_dropkickjs && npm run copy_citeproc",
      "check_js": "node_modules/.bin/jshint .",
      "check_py": "flake8 ./",
      "install": "napa"
  },
  "author": "Johannes Wilm",
  "license": "AGPL",
  "private": true,
  "dependencies": {
    "browserify-incremental": "3.1.1",
    "browserify": "13.0.1",
    "babelify": "7.3.0",
    "babel-preset-es2015": "6.6.0",
    "prosemirror": "0.9.1",
    "jszip": "3.1.2",
    "jszip-utils": "0.0.2",
    "katex": "0.6.0",
    "object-hash": "1.1.2",
    "mathquill": "0.10.1-b",
    "bowser": "1.3.0",
    "jshint": "2.9.2",
    "fg-loadcss": "1.2.0",
    "paginate-for-print": "0.0.6",
    "jquery": "3.1.0",
    "jquery-ui-dist": "1.12.0",
    "underscore": "1.8.3",
    "datatables": "1.10.12",
    "dropkickjs": "2.1.10",
    "napa": "2.3.0"
  },
  "napa": {
    "citeproc": "Juris-M/citeproc-js#1.1.124"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "es2015"
        ],
          "compact": false
        }
      ]
    ]
  },
  "jshintConfig": {
    "esversion": 6,
    "loopfunc": true,
    "asi": true,
    "multistr": true,
    "sub": true,
    "undef": true,
    "predef": [
      "window",
      "document",
      "console",
      "jQuery",
	  "gettext",
	  "_",
	  "$",
	  "zip",
      "CSL",
      "MathQuill",
      "staticUrl",
      "pagination",
      "paginationConfig",
      "websocketServer",
      "websocketPort"
    ]
  }
}
