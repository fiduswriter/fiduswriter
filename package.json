{
  "name": "fidus-writer",
  "version": "3.0.0-beta.4",
  "description": "Install dependencies for ES6 transpilation",
  "scripts": {
      "js_check": "node_modules/.bin/jshint .",
      "py_check": "flake8 ./"
  },
  "author": "Johannes Wilm",
  "license": "AGPL",
  "private": true,
  "dependencies": {
    "browserify-incremental": "3.1.1",
    "browserify": "13.0.1",
    "babelify": "7.3.0",
    "babel-preset-es2015": "6.6.0",
    "prosemirror": "0.7.0",
    "katex": "0.6.0",
    "object-hash": "1.1.2",
    "mathquill": "0.10.1-b",
    "bowser": "1.3.0",
    "jshint": "2.9.2",
    "fg-loadcss": "1.2.0"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "es2015"
        ],
          "compact": false
        }
      ]
    ]
  },
  "jshintConfig": {
    "esversion": 6,
    "loopfunc": true,
    "asi": true,
    "multistr": true,
    "sub": true,
    "undef": true,
    "predef": [
      "window",
      "document",
      "console",
      "jQuery",
	  "gettext",
	  "_",
	  "$",
	  "zip",
      "CSL",
      "MathQuill",
      "staticUrl",
      "pagination",
      "paginationConfig",
      "websocketServer",
      "websocketPort"
    ]
  }
}
